	    if(buffer.delete_char())
	    {
		    putchar('');
		    putchar(' ');
		    putchar(''); 
		    backspace();
	    }
	}

	    //if size is not 0 delete from array of chars(for string)
	27		=>	{
}


/*match ((x%10)%10){
	91 => {drawchar('y')}
	_ => {drawchar((((x%10)%10) +0 )as char);}
*/
//drawchar('L');
//drawchar('E');
